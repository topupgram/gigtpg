  <!-- Form -->
  <div class="form-container" id="orderForm">
    <h3>Form Order Gift in Game</h3>
    <form id="giftForm">
      <label>Display Name Roblox</label>
      <input type="text" id="displayName" required>

      <label>Username Roblox</label>
      <input type="text" id="username" required>

      <label>Maps</label>
      <input type="text" id="maps" readonly>

      <label>Item</label>
      <input type="text" id="item" readonly>

      <label>Harga</label>
      <input type="text" id="harga" readonly>

      <button type="button" onclick="kirimWA()">Kirim ke WhatsApp</button>
    </form>
  </div>

  <script>
    function isiForm(maps, item, robux) {
      let harga = robux * 130;
      document.getElementById("maps").value = maps;
      document.getElementById("item").value = item + " (" + robux + " Robux)";
      document.getElementById("harga").value = "Rp" + harga.toLocaleString("id-ID");

      // auto scroll
      document.getElementById("orderForm").scrollIntoView({behavior: "smooth"});
    }

    function kirimWA() {
      let displayName = document.getElementById("displayName").value;
      let username = document.getElementById("username").value;
      let maps = document.getElementById("maps").value;
      let item = document.getElementById("item").value;
      let harga = document.getElementById("harga").value;

      let pesan = `Halo, saya ingin order Gift in Game:\n\n` +
                  `Display Name: ${displayName}\n` +
                  `Username: ${username}\n` +
                  `Maps: ${maps}\n` +
                  `Item: ${item}\n` +
                  `Harga: ${harga}`;

      let url = "https://wa.me/6283197962700?text=" + encodeURIComponent(pesan);
      window.open(url, "_blank");
    }
  </script>
